<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="377.0" prefWidth="314.0" spacing="20" style="-fx-background-color: #E8EAF6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tugasrplbo.tugasrplbo.Controller.ProfileAdminController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- User Logo and Name -->
    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="AdminProfile" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/User.png" />
         </image></ImageView>
        <Label fx:id="userName" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Erick" />
    </VBox>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Profile" />
   <Button fx:id="adminhomeButton" mnemonicParsing="false" onAction="#handleAdminhome" text="Admin Home" />
   <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogOut" text="LogOut" />
</VBox>
